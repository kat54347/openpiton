#######################################################################
# Run Place and Route script
#
# rpar -help for help
#######################################################################

use warnings;
use strict;
use Cwd qw(chdir);
use Getopt::Long qw(GetOptions);
use rcommon;
use File::Path qw(make_path);
$| = 1;

$SIG{__DIE__} = \&sighandler;

#######################################################################
# Global variables
#######################################################################

my $prg = $0;
$prg =~ s/.*\///;
$prg =~ s/,.*//;

my $all      = 0;
my $par_q    = "/bin/sh";
my $slurm    = 0;
my $scores   = "10";
my $stime    = "96:00:00";
my $swait    = 0;
my $process  = "gf14_invecas";
my $tool     = "icc2";
my $syn_tool = "dc";
my $build_id = "";
my $blk_dir;

my @blocks     = ();
my @block_list = ();

#######################################################################
# Check command line options
#######################################################################
GetOptions(
    'all'        => \$all,
    'help|h'     => \&usage,
    'slurm'      => \$slurm,
    'scores=s'   => \$scores,
    'stime=s'    => \$stime,
    'swait'      => \$swait,
    'process=s'  => \$process,
    'tool=s'     => \$tool,
    'build_id=s' => \$build_id,
) or &usage;

foreach my $argv (@ARGV) {
    push @blocks, $argv;
}

my $blk_list       = "$ENV{DV_ROOT}/asicflow/$process/block.list";
my $blocks_info    = process_blocks( $blk_list, $all, \@blocks );
my $count          = $blocks_info->{COUNT};
my $block_list_ref = $blocks_info->{MATCHES};
@block_list = @$block_list_ref;

if ($count) {
    print "$prg: Running place and route for $count modules\n";
}
else {
    print "$prg: No matching modules found.\n";
    &usage;
}
if ( $build_id eq "" ) {
    print "$prg: Please specify build_id\n";
    &usage;
}

my @job_ids = ();
foreach my $block (@block_list) {
    print "$prg: Running place and route for $block->{ID}\n";
    my $cmd     = $par_q;
    my $counter = 0;
    $blk_dir = $ENV{DV_ROOT};
    $blk_dir
        .= "/asicflow/$process/specific/$block->{PATH}/asicflow/par/$tool/rpar_${build_id}";
    if ( -e $blk_dir and -d $blk_dir ) {
        print "$prg: Entering directory $blk_dir\n";
    }
    else {
        my $syn_blk_dir
            = "$ENV{DV_ROOT}/asicflow/$process/specific/$block->{PATH}/asicflow/syn/${syn_tool}/rsyn_${build_id}";
        if ( -e $syn_blk_dir and -d $syn_blk_dir ) {
            print "$prg: Creating directory $blk_dir\n";
        }
        else {
            print "$prg: Please specify a valid build_id\n";
            &usage;
        }
    }
    make_path($blk_dir);
    chdir $blk_dir;
    if ( -e "../script" and -d "../script" ) {
        `cp -r ../script .`;
    }
    $cmd
        .= " $ENV{DV_ROOT}/tools/bin/par_command_$tool $process $build_id $block->{PATH}";
    if ( !$slurm ) {
        system($cmd);
    }
    else {
        my $block_fs = $block->{PATH};
        my $find     = "/";
        my $replace  = "_";
        $block_fs =~ s/$find/$replace/g;
        my $cmd_script = "par_";
        $cmd_script .= $block->{ID};

        create_slurm_script( $cmd_script, $cmd, $scores, $stime,
            $block->{PARMEM} );

        my $job_id = submit_slurm_job( $prg, $cmd_script );
        push @job_ids, $job_id;
    }
}

if ( $slurm && $swait ) {
    print "$prg: Waiting for place and route jobs to finish...\n";
    wait_slurm_jobs( \@job_ids );
}

#######################################################################
sub usage {
    printf "Usage: $prg [OPTION]... [block_list]...\n\n";
    print "Run Place and Route for OpenPiton\n\n";
    printf "Basic:\n";
    printf "%-3s %-20s %s\n", "", "--all",
        "run place and route for all blocks.";
    printf "%-3s %-20s %s\n", "-h,", "--help", "print this help.";
    printf "%-3s %-20s %s\n", "", "--slurm",
        "run with SLURM. see SLURM options.";
    printf "%-3s %-20s %s\n", "", "--process=STRING",
        "set the process node. (default=gf14_invecas)";
    printf "%-3s %-20s %s\n", "", "--tool=STRING",
        "set the tool used for place and route. (default=icc2)";
    printf "%-3s %-20s %s\n\n", "", "--build_id=STRING",
        "set the build ID. (default=rsyn_Y_M_D_count)";
    printf "SLURM:\n";
    printf "%-3s %-20s %s\n", "", "--scores=NUMBER",
        "number of cores to request. (default=6)";
    printf "%-3s %-20s %s\n", "", "--stime=TIME",
        "amount of time to request. (default=24:00:00)";
    printf "%-3s %-20s %s\n\n", "", "--swait",
        "wait for place and route jobs to finish before returning.";
    printf "%-24s %s\n\n", "block_list:",
        "specify list of blocks to place and route.";
    printf "Examples:\n";
    print "\t$prg -all\n\t$prg fpu_add\n\n";
    exit(0);
}
